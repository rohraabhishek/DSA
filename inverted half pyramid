#include <iostream>

using namespace std;

int main()
{
    //inverted half pyramid pattern
    int num;
    cin>>num;
    
    for(int i=1; i<=num; i++){
        for(int j=1; j<=num+1-i; j++){
            cout<<"*";
        }
        cout<<endl;
    }
    
    cout<<endl;
    
    for(int i=num; i>=1; i--){
        for(int j=1; j<=i; j++){
            cout<<"&";
        }
        cout<<endl;
    }
    return 0;
}
